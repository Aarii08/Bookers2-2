<% if current_user != user %>
  <% if current_user.following?(user) %>
    <p class="text-left"><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-info" %></p>
  <% else %>
    <p class="text-left"><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success" %></p>
  <% end %>
<% end %>