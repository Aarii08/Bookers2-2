<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= image_tag @post_image.get_image(300,300), class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag @post_image.user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="fa-solid fa-user"></i><span> <%= @post_image.name %></span></strong>
          </p>
          <p class="card-text"><%= @post_image.caption %></p>
          <p class="card-text"><%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
          <p class="card-text mt-5">コメント件数：<%= @post_image.post_comments.count %></p>
          <p class="card-text" id="favorites_btn_<%= @post_image.id %>">
            <%= render "favorites/favorites", post_image: @post_image %>
          </p>
        </div>
        <% if @post_image.user == current_user %>
          <%= link_to "編集", edit_post_image_path(@post_image), class: "btn btn-success" %>
          <div class="ml-auto">
            <%= link_to "削除", post_image_path(@post_image), method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% @post_image.post_comments.each do |post_comment| %>
  <div class="card w-25 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_comment.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="fa-solid fa-user"></i><span> <%= post_comment.user.name %></span></strong>
          </p>
          <p class="card-text"><%= post_comment.comment %></p>
          <p class="card-text"><%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        <% if @post_image.user == current_user %>
          <div class="ml-auto">
            <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-danger" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="row no-gutters mb-5">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h5 class="bg-dark text-white p-4 mb-0 text-center">コメント</h5>
    <div class="form-body p-3">
      <%= form_with model: [@post_image, @post_comment] do |f| %>
        <div class="input-group mb-4 mt-4">
          <%= f.text_area :comment, row: '5', placeholder: "コメントをここに入力", style: "width:100%" %>
        </div>
        <%= f.submit '送信', class:"btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>
