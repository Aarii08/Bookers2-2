<div class="card-list-container py-5">
  <% @post_images.each do |post_image| %>
  <div class="card w-25 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= image_tag post_image.get_image(200,200), class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_image.user.get_profile_image(30,30), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p><i class="fas fa-user"></i> <%= post_image.user.name %></p>
          <p class="card-title">
              <strong><i class="far fa-flag"></i><span> <%= post_image.name %></span></strong>
          </p>
          <p class="card-text"><%= post_image.caption %></p>
          <div class="d-flex justify-content-between">
            <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
            <span>❤️<%= post_image.favorites.count %> いいね</span>
            <span></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <div class="d-flex justify-content-center">
    <div class="mt-5"><%= paginate @post_images %></div>
  </div>
</div>