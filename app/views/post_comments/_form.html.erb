<%= form_with model: [post_image, post_comment], local: false do |f| %>
  <div class="input-group mb-4 mt-4">
    <%= f.text_area :comment, row: '5', placeholder: "コメントをここに入力", style: "width:100%", id: "comment_textarea" %>
  </div>
  <%= f.submit '送信', class: "btn btn-lg btn-block btn-info mt-4" %>
<% end %>