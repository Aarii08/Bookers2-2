<% post_image.post_comments.each do |post_comment| %>
  <div class="card w-25 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_comment.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="fa-solid fa-user"></i><span> <%= post_comment.user.name %></span></strong>
          </p>
          <p class="card-text"><%= post_comment.comment %></p>
          <p class="card-text"><%= post_image.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        <% if post_comment.user == current_user %>
          <div class="ml-auto">
            <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-danger", remote: true %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>