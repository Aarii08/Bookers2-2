<div class="card-list-container py-5">
  <div class="row my-5">
    <div class="col-6 mx-auto">
      <h1 class="text-center mb-5 border-bottom border-dark">Your</h1>
        <div class="col-12 text-center">
          <div class="row mt-5 py-3 border border-dark">
            <div class="col-6">
              <h3 class="text-center mt-3 mb-2"><%= @my_user.name %></h3>
              <%= link_to user_path(@my_user) do %>
                <p class="text-center mt-2"><%= image_tag @my_user.get_profile_image(100,100) %></p>
              <% end %>
              <p class="text-center"><%= link_to "編集", edit_user_path(@my_user), class: "btn btn-success" %></p>
            </div>
            <div class="col-6">
              <div id="follow-btn_<%= @my_user.id %>">
                <%= render "relationships/follow", user: @my_user %>
              </div>
              <div class="text-left" id="followings-count_<%= @my_user.id %>">
                <p>フォロー：<%= link_to @my_user.followings.count, user_followings_path(@my_user) %></p>
              </div>
              <div class="text-left" id="followers-count_<%= @my_user.id %>">
                <p>フォロワー：<%= link_to @my_user.followers.count, user_followers_path(@my_user) %></p>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto my-5">
      <h1 class="text-center mb-5 border-bottom border-dark">ユーザー一覧</h1>
      <div class="col-12 text-center">
        <% @users.each do |user| %>
          <% if user != current_user %>
            <div class="row mt-5 py-3 border">
              <div class="col-6">
                <h3 class="text-center mt-3 mb-2"><%= user.name %></h3>
                <%= link_to user_path(user) do %>
                  <p class="text-center mt-2"><%= image_tag user.get_profile_image(100,100) %></p>
                <% end %>
              </div>
              <div class="col-6">
                <div id="follow-btn_<%= user.id %>">
                  <%= render "relationships/follow", user: user %>
                </div>
                <div class="text-left" id="followings-count_<%= user.id %>">
                  <p>フォロー：<%= link_to user.followings.count, user_followings_path(user) %></p>
                </div>
                <div class="text-left" id="followers-count_<%= user.id %>">
                  <p>フォロワー：<%= link_to user.followers.count, user_followers_path(user) %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>